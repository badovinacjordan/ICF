 <script>
  document.getElementById("schedule-button1").addEventListener("click", function() {
  var content = document.getElementById("schedule1");
  if (content.style.display === "block") {
      content.style.display = "none";
  } else {
      content.style.display = "block";
  }
});

document.getElementById("schedule-button2").addEventListener("click", function() {
  var content = document.getElementById("schedule2");
  if (content.style.display === "block") {
      content.style.display = "none";
  } else {
      content.style.display = "block";
  }
});

</script>

